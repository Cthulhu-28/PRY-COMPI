<#
Prueba 004
Cálculo del área de un círculo
#>
nomen test004
perpestus
	fractio PI dito 3141|1000 .
commutabilis
	numerus R .
firmamentum
	scribocatena("Digite el radio: ") .
	R := legonumerus() .
	
	in R > 0 certus
	initum
		scribofractio ((R * R) |* PI) .
	finis
	mentiri
		scribocatena ("0"). .
	